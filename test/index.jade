doctype html
html
  head
    style
      :stylus
        @require "../index.styl"

  body
    p Styled
    progress(max="100", value="0") Progress: 60% done.
    br
    progress(max="100", value="50") Progress: 60% done.
    br
    progress(max="100", value="100") Progress: 60% done.
    br
    progress() Progress: 60% done.

    p HTML Fallback
    div(class="progress-bar")
      span(style="width: 0%;") Progress: 0%
    div(class="progress-bar")
      span(style="width: 50%;") Progress: 50%
    div(class="progress-bar")
      span(style="100") Progress: 100%
    div(class="progress-bar")
