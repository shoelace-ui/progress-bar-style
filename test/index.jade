doctype html
html
  head
    style
      :stylus
        @require '../index'

  body
    p Styled
    progress(max="100", value="0") Progress: 0% done.
    br
    progress(max="100", value="50") Progress: 50% done.
    br
    progress(max="100", value="100") Progress: 100% done.
    br
    progress() Progress: ? done.

    p HTML Fallback
    div(class="progress-bar-fallback")
      span(style="width: 0%;") Progress: 0%
    div(class="progress-bar-fallback")
      span(style="width: 50%;") Progress: 50%
    div(class="progress-bar-fallback")
      span(style="width: 100;") Progress: 100%
    div(class="progress-bar-fallback")
      span(class="undefined") Progress: Undefined
