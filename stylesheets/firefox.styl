@require './variables'

/* Firefox */
progress[value]
  &::-moz-progress-bar
    border-radius progress-bar--border-radius
    background-size progress-bar--background-size

    background-image -moz-linear-gradient(135deg, transparent 33%, rgba(0, 0, 0, 0.1) 33%, rgba(0, 0, 0, 0.1) 66%, transparent 66%), -moz-linear-gradient(top, rgba(255, 255, 255, 0.25), rgba(0, 0, 0, 0.25)), -moz-linear-gradient(left, progress-bar--gradient-color-left, progress-bar--gradient-color-right)
