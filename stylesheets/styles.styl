/**
* Module dependencies
*/

@require './variables'
@require './firefox'
@require './webkit'
@require './iepolyfill'
@require './htmlfallback'

/**
 * Generic indeterminant 'progress' styles.
 */

progress:not([value])
  width progress-bar--width
  -moz-box-sizing border-box

/**
 * Generic determinant `progress` styles.
 */

progress[value]
  width progress-bar--width
  height progress-bar--height

  /* Reset the default apperance */
  -webkit-appearance none
  -moz-appearance none
  appearance none

  border-radius progress-bar--border-radius
  box-shadow progress-bar--box-shadow
  background-color progress-bar--background-color

  /* Remove FF default border */
  border none

  /* For IE10 */
  color progress-bar--html-fallback-color
